<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.elmastaba.fragments.AboutUsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/about_us_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/about_us_photo_margin"
        android:src="@drawable/elmastaba_logo"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/about_us_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/about_us_text_margin"
        android:layout_marginLeft="@dimen/about_us_text_margin"
        android:layout_marginEnd="@dimen/about_us_text_margin"
        android:layout_marginRight="@dimen/about_us_text_margin"
        android:layout_marginBottom="@dimen/about_us_text_margin"
        android:textColor="@color/colorSecondaryText"
        android:layout_gravity="center"
        android:text="@string/about_us_description"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

    </LinearLayout>

</ScrollView>
