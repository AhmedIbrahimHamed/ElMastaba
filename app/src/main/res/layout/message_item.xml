<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/message_item_margin_bottom"
    android:orientation="horizontal">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/message_item_margin_bottom"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/message_user_image"
        android:layout_width="@dimen/message_item_image_width_and_height"
        android:layout_height="@dimen/message_item_image_width_and_height"
        android:src="@mipmap/ic_person_black_with_background_green"
        android:contentDescription="@string/content_description_profile_picture"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/backgroundColorWhite"/>

    <TextView
        android:id="@+id/message_user_name"
        android:layout_width="@dimen/message_item_name_width"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="@color/colorSecondaryText"
        tools:text="Ahmed"/>

</LinearLayout>

    <TextView
        android:id="@+id/message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorPrimaryText"
        android:layout_marginTop="@dimen/message_item_content_margin_top"
        android:layout_marginLeft="@dimen/message_item_content_margin_left"
        android:layout_marginStart="@dimen/message_item_content_margin_left"
        tools:text="This is a message"/>

</LinearLayout>